{
    "manifest_version": 2,
    "name": "Booklet",
    "description": "See and organize your bookmarks as trees",
    "version": "1.0",
    "chrome_url_overrides" : {
    	"newtab": "/public/app/signup/signup.html"
    },

    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },

    "content_scripts": [ {
      "css": [
        "./public/assets/css/normalize.css", 
        "./public/assets/css/skeleton.css", 
        "./public/assets/css/style.css", 
        "./public/assets/css/style.styl"
      ],
      "matches": [ "http://*/*", "https://*/*"]
    }],

    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    
    "permissions": [
    	"bookmarks",
        "tabs",
        "unlimitedStorage",
        "management",
        "webRequest"
    ]
}